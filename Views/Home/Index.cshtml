@{
    ViewData["Title"] = "Dojo Survey";
}

<div class="text-center">
    <h1 class="display-4">Dojo Survey Form</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <form action="PostMethod" method="post">
        <div class="form-group">
            <label for="Name">Name</label>
            <input type="text" class="form-control" placeholder="Enter Name" name="Name">
            
            <label for="Email">Email</label>
            <input type="email" class="form-control" placeholder="Enter Email"name="Email">
            
            <label for="Password">Password</label>
            <input type="text" class="form-control" placeholder="Enter Password" name="Name">
            
            <label for="Location">Location</label>
            <input type="text" class="form-control" placeholder="Enter Location" name="Location">
            
            <label for="Language">Language</label>
            <input type="text" class="form-control" placeholder="Enter Language" name="Language">
            
            <label for="Comment">Comment</label>
            <textarea type="textarea" class="form-control" placeholder="Comments Here" name="Comment" rows="5" cols="30"></textarea>

            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>
